<h1>Регистрация</h1>
<fieldset>
  <legend>Новый пользователь</legend>
  <% if @user.errors.any? %>
    <h3>Возникли ошибки при заполнении формы</h3>
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= debug error.inspect %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'Сохранить' %>
  <% end %>
</fieldset>
